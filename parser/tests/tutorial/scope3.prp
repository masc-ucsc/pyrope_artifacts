# code/scope3.prp
a = 1
if a == 1 ::{
  a = 2               # compile error
  __parent.a = 3      # OK
  __root.scope3.a = 5 # OK, same
  f = 3               # local scope
}
I f == 3              # compile error, undefined
I a == 5
b = ::{
  % = __parent.a
}
c.a = 5
c = b.()
b.a = 3
I c == 5
d = b.()
I d == 3
